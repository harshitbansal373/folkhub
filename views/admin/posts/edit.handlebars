<h1>Edit Posts</h1>

<form action="/admin/posts/edit/{{post._id}}?_method=PUT" method="post" enctype="multipart/form-data">
    <div class="from-group">
        <label for="titile">Title</label>
        <input type="text" name="title" class="form-control" id="title" value="{{post.title}}">
    </div>

    <div class="form-group">
      <label for="file">Upload File</label>
      <input type="file" name="file" class="form-control">
    </div>

    <div class="from-group">
        <label for="category">Category</label>
        <select name="category" class="form-control">
            {{#select post.category}}
            {{#each categories}}
                <option value="{{_id}}">{{name}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>

    <div class="from-group">
        <label for="Status">Status</label>
        <select name="status" id="status" class="form-control">
            {{#select post.status}}
                <option value="public">public</option>
                <option value="private">private</option>
                <option value="draft">draft</option>
            {{/select}}
        </select>
    </div>

    <div class="from-group">
        <label for="allowcomments" class="form-check-label">
            <input type="checkbox" name="allowComments" {{#if post.allowComments}} checked="checked" {{/if}} class="form-check-input" id="allowComments">
                Allow Comments
        </label>
    </div>

    <div class="from-group">
        <label for="body">Body</label>
        <textarea name="body" cols="30" rows="10" id="body" class="form-control">{{post.body}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update Post</button>
</form>